#include <iostream>
#include <iomanip>
using namespace std;

// 1.6. szorzótábla
void szorzotabla(int num)
{
    cout << "=================" << endl;
    cout << "Szorzotabla feladat: " << endl;
    cout << "    ";
    for(int p = 1; p <= num; p++)
    {
        cout << setw(3) << p;
    }
    cout << endl;
    cout << "---+----------------" << endl;
    for(int i = 1; i <= num; i++)
    {
        cout << setw(3) << i;

        for(int j = 1; j <= num; j++)
        {
            if(num/j == num)
            {
                cout << "|" << setw(3) << j;
            }
            else
            cout << setw(3) << j*i;
        }
        cout << endl;
    }
}

int main()
{
    szorzotabla(10);
    return 0;
}
