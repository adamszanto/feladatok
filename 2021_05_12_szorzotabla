#include <iostream>
using namespace std;

// 1.6. szorzótábla
void szorzotabla(int num)
{
    cout << "=================" << endl;
    cout << "Szorzotabla feladat: " << endl;
    cout << " 1";
    for(int p = 1; p <= num; p++)
    {
        if(p * num > 10 && p < 10)
        {
            cout << " " << p << " ";
        } else if(p*num > 10 && p > 10)
        {
            cout << p << " ";
        } else {
            cout << " " << p << " ";
        }
    }
    cout << endl;
    cout << "--+----------------" << endl;
    for(int i = 1; i <= num; i++)
    {
        // 100 felett
        if(i > 100)
        {
            cout << " " << i << " ";
        }
        // 1-9ig
        if(i < 10)
        {
            cout << " " << i << "";
        // 10-99 között
        } else {
            cout << " " << i << " ";
        }

        for(int j = 1; j <= num; j++)
        {
            if(num/j == num)
            {
                cout << "|";
            }
            else if(j*i < 10)
            {
                cout << " ";
            }
            cout << j*i << " ";

        }



        cout << endl;
    }

}

int main()
{
    szorzotabla(5);
    return 0;
}
