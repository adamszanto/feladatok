// https://www.hackerrank.com/challenges/flatland-space-stations/problem

#include <iostream>
using namespace std;

int main()
{
    int n;
    int m;
    int cities[n] {0};
    int i = 0;
    int max = 0;

    cin >> n >> m;
    int c[m];

    int temp;
    for(int i = 0; i <m ; i++)
    {
        cin >> temp;
        cities[temp] = 1;
    }

    int k = 0;

    for(int i = 0; i < n; i++)
    {
        if(cities[i] == 1)
        {
            int j = i;
            while(cities[j+1] == 0 && j < n)
            {
                k++;
                j++;
            }
        }

        if(k > max)
        {
            max = k;
        }

    }

    cout << (max+1)/2;


    return 0;
}
